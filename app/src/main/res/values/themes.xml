<resources>
    <style name="Base.Theme.MyWeather" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowSplashScreenBackground">#4193ff</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>


        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textColorSecondary">@color/onSurface</item>


        <!-- Switch on background -->
        <item name="colorPrimary">@color/onBackground</item>
        <!-- Switch on -->
        <item name="colorOnPrimary">@color/background</item>
        <!-- Switch off background -->
        <item name="colorSurfaceContainerHighest">@color/surfaceVariant</item>

        <!-- Bottom Sheet background -->
        <item name="colorSurface">@color/background</item>

        <!-- Text -->
        <item name="colorOnSurfaceVariant">@color/onSurface</item>

        <!-- Divider -->
        <item name="colorOutline">@color/outline</item>
        <!-- NavIcon Menu -->
        <item name="colorOnSurface">@color/onBackground</item>
    </style>


    <!-- AppBar -->
    <style name="AppBarLayoutBase" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/background</item>
        <item name="liftOnScroll">false</item>
    </style>

    <style name="MaterialToolbarBase" parent="Widget.Material3.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="navigationIconTint">@color/onBackground</item>
        <item name="titleTextColor">@color/onBackground</item>
    </style>


    <!-- Search -->
    <style name="SearchView" parent="Widget.Material3.SearchView">
        <item name="backgroundTint">@color/background</item>
        <!-- Text -->
        <item name="colorOnSurfaceVariant">@color/onBackground</item>
        <!-- Divider -->
        <item name="colorOutline">@color/outline</item>
        <!-- Icon Menu -->
        <item name="colorOnSurface">@color/onSurface</item>
    </style>
</resources>